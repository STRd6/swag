*
  box-sizing: border-box

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  margin: 0

body, html
  height: 100%

#LoginWithAmazon
  position: absolute
  top: 0

file
  padding-left: 1em
  position: relative

  .path
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

  & > .delete
    display: none
    position: absolute
    right: 1em
    top: 0

  &:hover
    background-color: #FFA

    & > .delete
      display: inline-block

folder
  display: block
  padding-left: 1em

  &::before
    content: "[+]"

  & > file, & > folder
    display: none

  &.expanded
    &::before
      content: "[-]"

    & > file, & > folder
      display: block

.os
  display: flex
  height: 100%

  & > folder
    flex-grow: 0
    padding-left: 0
    width: 250px

  & > iframe
    flex-grow: 1
    height: 100%

editor
  display: block
  margin-top: 1em

textarea
  display: block
  width: 100%

launcher
  display: block
  position: absolute
  bottom: 0

container
  display: block
  height: 100%
  overflow: auto

table
  border-collapse: collapse
  height: 100%
  overflow: auto
  width: 100%

th
  text-align: left

thead
  border-bottom: 1px solid black

td > input
  border: none
  background-color: transparent
  width: 100%
  height: 100%

tr:nth-child(even)
  background-color: #EEE
