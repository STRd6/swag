*
  box-sizing: border-box

folder
  display: block

  &::before
    content: "[+]"

  & > file, & > folder
    display: none
    padding-left: 1em

  &.expanded
    &::before
      content: "[-]"

    & > file
      display: block
    & > folder
      display: block

editor
  display: block
  margin-top: 1em

textarea
  display: block
  width: 100%
