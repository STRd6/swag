*
  box-sizing: border-box

body
  margin: 0

body, html
  height: 100%

#LoginWithAmazon
  position: absolute
  top: 0

file
  padding-left: 1em
  position: relative

  .path
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

  & > .delete
    position: absolute
    right: 1em
    top: 0

folder
  display: block
  padding-left: 1em

  &::before
    content: "[+]"

  & > file, & > folder
    display: none

  &.expanded
    &::before
      content: "[-]"

    & > file, & > folder
      display: block

.os
  display: flex
  height: 100%

  & > folder
    flex-grow: 0
    height: 100%
    padding-left: 0
    width: 250px

  & > iframe
    flex-grow: 1
    height: 100%

editor
  display: block
  margin-top: 1em

textarea
  display: block
  width: 100%
